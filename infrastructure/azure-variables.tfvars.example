# Azure Terraform Variables Example
# Copy this file to azure-variables.tfvars and fill in your values

# Azure Subscription and Tenant
subscription_id = "your-subscription-id-here"
tenant_id       = "your-tenant-id-here"

# Environment Configuration
environment = "dev"  # dev, staging, or prod
location    = "East US"  # Azure region

# Project Configuration
project_name = "pyspark-data-engineering"

# Network Configuration
vnet_address_space = ["10.0.0.0/16"]
private_subnet_address_prefixes = ["10.0.1.0/24", "10.0.2.0/24"]
public_subnet_address_prefixes  = ["10.0.101.0/24", "10.0.102.0/24"]

# Allowed IP ranges for storage access (leave empty for no restrictions)
allowed_ip_ranges = []

# HDInsight Cluster Configuration
head_node_vm_size   = "Standard_D4s_v3"
worker_node_vm_size = "Standard_D4s_v3"
worker_node_count   = 2

# Cluster Credentials (CHANGE THESE!)
cluster_username = "admin"
cluster_password = "YourSecurePassword123!"
gateway_username = "admin"
gateway_password = "YourSecurePassword123!"

# Alternative to HDInsight
use_databricks = false  # Set to true to use Azure Databricks instead
use_customer_managed_key = false  # Set to true for production encryption
