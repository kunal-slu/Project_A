# Local Development Environment Variables
# This file is automatically loaded by direnv (.envrc)

# Environment
ENV=local

# AWS (local/mock)
AWS_REGION=us-east-1
AWS_PROFILE=local
AWS_ACCESS_KEY_ID=mock
AWS_SECRET_ACCESS_KEY=mock

# Spark Local Mode
SPARK_MASTER=local[*]
SPARK_LOCAL_IP=127.0.0.1

# Data Paths (local filesystem)
DATA_ROOT=${PROJECT_ROOT}/data
BRONZE_PATH=${DATA_ROOT}/lakehouse_delta/bronze
SILVER_PATH=${DATA_ROOT}/lakehouse_delta/silver
GOLD_PATH=${DATA_ROOT}/lakehouse_delta/gold

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Data Quality
DQ_ENABLED=true
DQ_MODE=local

# Lineage (disabled locally)
OPENLINEAGE_ENABLED=false
OPENLINEAGE_URL=http://localhost:8080

# Secrets (mock for local)
SNOWFLAKE_USER=local_user
SNOWFLAKE_PASSWORD=mock_password
SF_USERNAME=local_sf_user
SF_PASSWORD=mock_sf_password

