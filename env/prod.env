# Production Environment Variables
# This file is automatically loaded by direnv (.envrc)
# ⚠️ NEVER commit actual secrets to git - use AWS Secrets Manager

# Environment
ENV=prod

# AWS
AWS_REGION=us-east-1
AWS_PROFILE=prod-profile

# EMR Serverless (prod)
EMR_APPLICATION_ID=${EMR_APP_ID_PROD}
EMR_JOB_ROLE_ARN=arn:aws:iam::${AWS_ACCOUNT_ID}:role/EmrServerlessJobExecutionRole

# Data Lake (prod bucket)
LAKE_BUCKET=company-data-lake-${AWS_ACCOUNT_ID}
CODE_BUCKET=company-code-artifacts-${AWS_ACCOUNT_ID}

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Data Quality
DQ_ENABLED=true
DQ_MODE=prod
DQ_CRITICAL_THRESHOLD=0.95

# Lineage
OPENLINEAGE_ENABLED=true
OPENLINEAGE_URL=https://lineage.example.com
OPENLINEAGE_NAMESPACE=prod-data-platform
OPENLINEAGE_API_KEY_SECRET=openlineage/api_key/prod

# Secrets (from AWS Secrets Manager - prod)
SNOWFLAKE_SECRET_NAME=snowflake/etl/prod
SF_SECRET_NAME=salesforce/api_token/prod
REDSHIFT_SECRET_NAME=redshift/analytics/prod
KAFKA_SECRET_NAME=kafka/brokers/prod

# Monitoring
CLOUDWATCH_NAMESPACE=ETLPipelineMetrics
PROMETHEUS_ENABLED=true

# MWAA Variables (must be set in MWAA console)
MWAA_ENVIRONMENT=prod-mwaa

