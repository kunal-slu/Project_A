# Development Environment Variables
# This file is automatically loaded by direnv (.envrc)

# Environment
ENV=dev

# AWS
AWS_REGION=us-east-1
AWS_PROFILE=dev-profile

# EMR Serverless (dev)
EMR_APPLICATION_ID=${EMR_APP_ID_DEV}
EMR_JOB_ROLE_ARN=arn:aws:iam::${AWS_ACCOUNT_ID}:role/EmrServerlessJobExecutionRole

# Data Lake (dev bucket)
LAKE_BUCKET=company-data-lake-dev-${AWS_ACCOUNT_ID}
CODE_BUCKET=company-code-artifacts-dev-${AWS_ACCOUNT_ID}

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Data Quality
DQ_ENABLED=true
DQ_MODE=dev

# Lineage
OPENLINEAGE_ENABLED=true
OPENLINEAGE_URL=https://lineage-dev.example.com
OPENLINEAGE_NAMESPACE=dev-data-platform

# Secrets (from AWS Secrets Manager - dev)
SNOWFLAKE_SECRET_NAME=snowflake/etl/dev
SF_SECRET_NAME=salesforce/api_token/dev

