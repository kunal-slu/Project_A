      "nullable": false,
      "description": "Customer identifier"
    },
    "product_id": {
      "type": "string",
      "nullable": false,
      "description": "Product identifier"
    },
    "order_date": {
      "type": "date",
      "nullable": false,
      "description": "Order date"
    },
    "total_amount": {
      "type": "decimal(10,2)",
      "nullable": false,
      "description": "Order total amount"
    },
    "record_source": {
      "type": "string",
      "nullable": false,
      "description": "Source system identifier"
    },
    "record_table": {
      "type": "string",
      "nullable": false,
      "description": "Source table identifier"
    },
    "ingest_timestamp": {
      "type": "timestamp",
      "nullable": false,
      "description": "Data ingestion timestamp"
    }
