{
  "table": "orders_bronze",
  "primary_key": "order_id",
  "columns": {
    "order_id": "string",
    "customer_id": "string",
    "product_id": "string",
    "order_date": "string",
    "quantity": "integer",
    "total_amount": "double",
    "shipping_address": "string",
    "shipping_city": "string",
    "shipping_state": "string",
    "shipping_country": "string",
    "payment": "string"
  },
  "required_non_null": ["order_id", "customer_id", "product_id", "order_date", "total_amount"],
  "freshness_column": "order_date",
  "max_lag_minutes": 1440,
  "data_quality_rules": {
    "positive_amount": "total_amount > 0",
    "positive_quantity": "quantity > 0",
    "valid_date": "order_date IS NOT NULL"
  }
}
